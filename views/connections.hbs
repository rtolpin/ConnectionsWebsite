<head>
  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link type="text/css" rel="stylesheet" href="/stylesheets/materialize.min.css"  media="screen,projection"/>
  <link type="text/css" rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
</head>
<body>
  {{#if username}}
    <nav class='blue' style=''>
      <div class="nav-wrapper">
        <a href="#" data-activates="slide-out" class="brand-logo"><i class="material-icons">menu</i></a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
         <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </nav>
    <ul id="slide-out" class="side-nav">
      <li><a class="subheader">Home</a></li>
      <li><a class="waves-effect" href="/">Go Back Home</a></li>
      <li><a class="subheader">Connect</a></li>
      <li><a class="waves-effect" href="/find/connections">Find Connections</a></li>
      <li><a class="subheader">Me</a></li>
      <li><a class="waves-effect" href="/profile">Profile</a></li>
      <li><a class="subheader">Search</a></li>
      <li><a class="waves-effect" href="/search"><i class="material-icons">search</i></a></li>
      <li><a class="subheader">About</a></li>
      <li><a class="waves-effect" href="/about">About This Site</a></li>
    </ul>
      <a class="waves-effect waves-light btn" href="#modal1" style='margin-top:5px; margin-left:3px;'>Create New Connection</a>
      <div id="modal1" class="modal">
        <form action='/create/connection' method='post'>
          <div class="modal-content">
            <div class="input-field col s6">
              <input placeholder="Bob" id="first_name_conn" name="first_name" type="text" class="validate">
              <label for="first_name">First Name</label>
            </div>
            <div class="input-field col s6">
              <input placeholder="Example" id="last_name_conn" name="last_name" type="text" class="validate">
              <label for="first_name">Last Name</label>
            </div>
            <div class="input-field col s6">
              <select id='selectLocation' name='gender'>
                <option value="" disabled selected>Choose your option</option>
                <option value="1">Female</option>
                <option value="2">Male</option>
              </select>
              <label>Gender</label>
            </div>
          </div>
          <div class="modal-footer">
            <!--<a class=" modal-action modal-close waves-effect waves-green btn-flat">Submit</a>-->
            <input type='submit' class='waves-effect waves-light btn blue' value='Submit'>
          </div>
        </form>
      </div>

    <div class="carousel">
      {{#each connections as |connection|}}
        <a class="carousel-item" href="#modal2">
          <h6 style='text-align: left;'>{{connection.first_name}} {{connection.last_name}}</h6>
          <img src='{{genderImageUrl}}' style='width:75%;'>
        </a>
      {{/each}}
    </div>
    <div id="modal2" class="modal">
      <div class='modal-content'>
        <h6 class='purple-text'>About me:</h6><p>I am a new connection</p>
      </div>
    </div>
    <script>
      $(document).ready(function(){
          $('select').material_select();
          $(".brand-logo").sideNav();
          $('.modal').modal();
          $('.carousel').carousel();
      });
    </script>
  {{else}}
    <h6>Restricted: Cannot View Page</h6>
  {{/if}}
</body>
